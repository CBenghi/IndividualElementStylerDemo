<Window x:Class="VisualDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:xbim="http://schemas.Xbim.com/Presentation"
        xmlns:local="clr-namespace:VisualDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions >
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<xbim:DrawingControl3D x:Name="myControl" />
		<StackPanel Grid.Column="1">
			<Button Margin="10,2" Content="Open" Click="open" />
			<Button Margin="10,2" Content="Blink" Click="blink" />
			<Button Margin="10,2" Content="Stop Blinking" Click="stopBlink" />
		</StackPanel>
	</Grid>
</Window>
